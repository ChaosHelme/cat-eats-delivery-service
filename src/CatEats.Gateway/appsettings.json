{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore.Hosting": "Warning",
      "Microsoft.AspNetCore.Routing": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Authority": "https://your-identity-server.com"
  },
  "ReverseProxy": {
    "Routes": {
      "user-service-route": {
        "ClusterId": "user-service-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/users/{**catch-all}"
          },
          {
            "RequestHeader": "X-Service-Name",
            "Set": "user-service"
          }
        ],
        "RateLimiterPolicy": "ApiPolicy"
      },
      "restaurant-service-route": {
        "ClusterId": "restaurant-service-cluster",
        "Match": {
          "Path": "/api/restaurants/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/restaurants/{**catch-all}"
          },
          {
            "RequestHeader": "X-Service-Name",
            "Set": "restaurant-service"
          }
        ],
        "RateLimiterPolicy": "ApiPolicy"
      },
      "order-service-route": {
        "ClusterId": "order-service-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/orders/{**catch-all}"
          },
          {
            "RequestHeader": "X-Service-Name",
            "Set": "order-service"
          }
        ],
        "RateLimiterPolicy": "ApiPolicy",
        "AuthorizationPolicy": "authenticated"
      },
      "delivery-service-route": {
        "ClusterId": "delivery-service-cluster",
        "Match": {
          "Path": "/api/deliveries/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/deliveries/{**catch-all}"
          },
          {
            "RequestHeader": "X-Service-Name",
            "Set": "delivery-service"
          }
        ],
        "RateLimiterPolicy": "ApiPolicy",
        "AuthorizationPolicy": "rider-or-admin"
      },
      "auth-route": {
        "ClusterId": "user-service-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/{**catch-all}"
          }
        ],
        "RateLimiterPolicy": "AuthPolicy"
      }
    },
    "Clusters": {
      "user-service-cluster": {
        "Destinations": {
          "user-service": {
            "Address": "https://user-service/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "restaurant-service-cluster": {
        "Destinations": {
          "restaurant-service": {
            "Address": "https://restaurant-service/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "order-service-cluster": {
        "Destinations": {
          "order-service": {
            "Address": "https://order-service/"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "delivery-service-cluster": {
        "Destinations": {
          "delivery-service": {
            "Address": "https://delivery-service/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  }
}